<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.5"></RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="294dp"
        android:background="@drawable/bestbuy"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shadow"
            android:id="@+id/relativeLayout">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ежедневное награждение"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView8" />


        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Закрыть"
            android:textColor="#FFFFFFFF"
            android:id="@+id/btnClose"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadow2"/>

        <RelativeLayout
            android:layout_width="294dp"
            android:layout_height="84dp"
            android:background="@drawable/btncon"
            android:id="@+id/btnOpenLetter"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="День 1"
                android:layout_marginLeft="7dp"
                android:textColor="#ffffffff"
                android:textSize="42sp"
                android:layout_centerVertical="true"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/day"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ffffffff"
                    android:textSize="56sp"
                    />

                <ImageView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:background="@drawable/coin"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView6" />
            </RelativeLayout>


        </RelativeLayout>







        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заходите чаще и получайте больше монет"
            android:textSize="15sp"
            android:textColor="#ffffffff"
            android:layout_above="@+id/btnClose"
            android:layout_alignRight="@+id/btnOpenLetter"
            android:layout_alignEnd="@+id/btnOpenLetter"
            android:layout_marginBottom="3dp"/>

    </RelativeLayout>

</RelativeLayout>