<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"
    android:background="@drawable/fullfon"
    android:id="@+id/rootLayoutMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/coni"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/relativeLayoutGold"
            android:onClick="ShowGameshopPopUp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/plus"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:alpha="0.7"
                android:id="@+id/textViewGold"
                android:layout_centerVertical="true"
                android:textSize="28sp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffffff"
                android:layout_toLeftOf="@+id/imageView"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/coin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/coni"
            android:id="@+id/cifra">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffffff"
                android:textSize="35sp"
                android:id="@+id/textViewCurLevel"
                android:alpha="0.7"/>

        </RelativeLayout>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/nextLevel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cifra"
            android:onClick="NextLevelClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/prevLevel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cifra"
            android:onClick="PrevLevelClick"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/imageButtonPlay"
        android:background="@drawable/btnanim"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="animButtonClick"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:id="@+id/button"
        android:layout_below="@+id/imageButtonPlay"
        android:layout_alignLeft="@+id/imageButtonPlay"
        android:layout_alignStart="@+id/imageButtonPlay"
        android:layout_marginTop="20dp"
        android:background="@drawable/istore"
        android:onClick="ShowGameshopPopUp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/imageButtonPlay"
        android:layout_alignEnd="@+id/imageButtonPlay"
        android:background="@drawable/infa"
        android:onClick="ShowAboutPopUp"
        android:layout_marginRight="10dp"/>


</RelativeLayout>
