<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fullfon"
    android:id="@+id/rootLayoutMain">





    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButtonPlay"
        android:background="@drawable/btnanim"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="animButtonClick"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/button"
        android:layout_below="@+id/imageButtonPlay"
        android:layout_alignLeft="@+id/imageButtonPlay"
        android:layout_alignStart="@+id/imageButtonPlay"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/istore"
        android:onClick="ShowGameshopPopUp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
       android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/imageButtonPlay"
        android:layout_alignEnd="@+id/imageButtonPlay"
        android:layout_marginRight="10dp"
        android:onClick="ShowAboutPopUp"
        android:background="@drawable/infa"/>


</RelativeLayout>
