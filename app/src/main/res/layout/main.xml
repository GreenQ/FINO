<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fullfon"
    android:id="@+id/rootLayoutMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/header_panel">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/coni"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="+"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:alpha="0.7"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffffff"
                android:layout_toLeftOf="@+id/imageView"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/coin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/coni"
            android:id="@+id/cifra">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:id="@+id/textViewCurLevel"
                android:alpha="0.7"/>

        </RelativeLayout>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/nextLevel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cifra"
            android:onClick="NextLevelClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/prevLevel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cifra"
            android:onClick="PrevLevelClick"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButtonPlay"
        android:background="@drawable/btnanim"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="animButtonClick"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/button"
        android:layout_below="@+id/imageButtonPlay"
        android:layout_alignLeft="@+id/imageButtonPlay"
        android:layout_alignStart="@+id/imageButtonPlay"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/istore"
        android:onClick="ShowGameshopPopUp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
       android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/imageButtonPlay"
        android:layout_alignEnd="@+id/imageButtonPlay"
        android:layout_marginRight="10dp"
        android:onClick="ShowAboutPopUp"
        android:background="@drawable/infa"/>


</RelativeLayout>
