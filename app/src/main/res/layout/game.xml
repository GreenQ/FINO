<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullfon"
    android:id="@+id/rootLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/header_panel">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/coni"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:id="@+id/relativeLayoutGold"
            android:onClick="ShowGameshopPopUp">

<ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:background="@drawable/plus"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:alpha="0.7"
                android:id="@+id/textViewGold"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffffff"
                android:layout_toLeftOf="@+id/imageView"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/coin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView"
                android:layout_marginRight="5dp"/>

            </RelativeLayout>

<RelativeLayout
    android:layout_width="60dp"
    android:layout_height="30dp"
    android:layout_centerVertical="true"
    android:background="@drawable/coni"
    android:layout_marginLeft="3dp"
    android:id="@+id/goBack"
    android:onClick="goBack">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:id="@+id/imageButton3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:alpha="0.7"
        android:background="@drawable/arr"
        android:onClick="goBack"/>

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/coni"
            android:id="@+id/cifra">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            android:id="@+id/textViewCurLevel"
            android:alpha="0.7"/>

        </RelativeLayout>






    </RelativeLayout>

    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="350dp" android:layout_marginTop="40dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="10dp" android:gravity="center" android:layout_marginTop="10dp">
            <!--
             This is an example layout containing thumbnail image buttons that, when pressed,
                         zoom in to show more detail. All of the zooming and animation logic is in
                         the ZoomActivity class.
            -->
            <AbsoluteLayout android:layout_width="330dp" android:layout_height="330dp" android:layout_centerHorizontal="true">
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="0dp" android:layout_y="0dp" android:background="#ff384653" android:layout_marginBottom="5dp" android:id="@+id/imageView1" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:padding="2dp"/>
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="170dp" android:background="#ff384653" android:adjustViewBounds="false" android:baselineAlignBottom="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginLeft="5dp" android:id="@+id/imageView2" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="2dp"/>
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="0dp" android:layout_y="170dp" android:background="#ff384653" android:clickable="false" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/imageView3" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="2dp"/>
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_x="170dp"
                    android:layout_y="170dp"
                    android:background="#ff384653"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/imageView4"
                    android:layout_marginRight="1dp"
                    android:scaleType="centerCrop"
                    android:padding="2dp"/>

                <ImageView android:id="@+id/expanded_image"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:background="#ff384653"
                    android:padding="3dp"/>
            </AbsoluteLayout>
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_marginTop="395dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:id="@+id/guessWordsLayout"
    android:orientation="vertical">



</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="450dp"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter0"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:background="#a4ff8144"
            android:onClick="onClickActualLetter"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter1"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter0"
            android:layout_toEndOf="@+id/buttonLetter0"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter2"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter1"
            android:layout_toEndOf="@+id/buttonLetter1"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter3"
            android:background="#a4ff8144"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffffff"
            android:layout_toRightOf="@+id/buttonLetter2"
            android:layout_toEndOf="@+id/buttonLetter2"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter4"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter3"
            android:layout_toEndOf="@+id/buttonLetter3"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter5"
            android:layout_marginLeft="5dp"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonLetter4"
            android:layout_toEndOf="@+id/buttonLetter4"
            android:onClick="onClickActualLetter"
             />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton8"
            android:textColor="#ffffffff"
            android:background="#ff1ed448"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter5"
            android:layout_toEndOf="@+id/buttonLetter5"
            android:onClick="ShowHintsPopUp"
            android:text="\?"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter6"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_toLeftOf="@+id/buttonLetter1"
            android:layout_toStartOf="@+id/buttonLetter1"
            android:layout_marginTop="45dp"
            android:onClick="onClickActualLetter"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter7"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter6"
            android:layout_toLeftOf="@+id/buttonLetter2"
            android:layout_toStartOf="@+id/buttonLetter2"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter8"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter7"
            android:layout_toLeftOf="@+id/buttonLetter3"
            android:layout_toStartOf="@+id/buttonLetter3"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter9"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter8"
            android:layout_toLeftOf="@+id/buttonLetter4"
            android:layout_toStartOf="@+id/buttonLetter4"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter10"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter9"
            android:layout_alignLeft="@+id/buttonLetter4"
            android:layout_alignStart="@+id/buttonLetter4"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter11"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter10"
            android:layout_toLeftOf="@+id/imageButton8"
            android:layout_toStartOf="@+id/imageButton8"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#ffffffff"
            android:id="@+id/buttonLetter12"
            android:background="#a4ff8144"
            android:layout_alignTop="@+id/buttonLetter11"
            android:layout_alignLeft="@+id/imageButton8"
            android:layout_alignStart="@+id/imageButton8"
            android:onClick="onClickActualLetter" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adUnitId="ca-app-pub-3376890691318599/3908610460"
            ads:adSize="SMART_BANNER"/>

        </LinearLayout>



</RelativeLayout>