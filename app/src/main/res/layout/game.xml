<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonnew"
    android:id="@+id/rootLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffe1fffc"
        android:id="@+id/header_panel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 gold"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:textColor="#151554"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:id="@+id/imageButton3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"

            android:background="#ffff0a11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textViewCurLevel"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/nextLevel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewCurLevel"
            android:onClick="NextLevelClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/prevLevel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textViewCurLevel"
            android:layout_toStartOf="@+id/textViewCurLevel"
            android:onClick="PrevLevelClick"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="350dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="10dp" android:gravity="center">
            <!--
             This is an example layout containing thumbnail image buttons that, when pressed,
                         zoom in to show more detail. All of the zooming and animation logic is in
                         the ZoomActivity class.
            -->
            <AbsoluteLayout android:layout_width="330dp" android:layout_height="330dp" android:layout_centerHorizontal="true">
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="0dp" android:layout_y="0dp" android:background="#ff000000" android:layout_marginBottom="5dp" android:id="@+id/imageView1" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:padding="3dp"/>
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="170dp" android:background="#ff000000" android:adjustViewBounds="false" android:baselineAlignBottom="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginLeft="5dp" android:id="@+id/imageView2" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="3dp"/>
                <ImageButton android:layout_width="160dp" android:layout_height="160dp" android:layout_x="0dp" android:layout_y="170dp" android:background="#ff000000" android:clickable="false" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/imageView3" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="3dp"/>
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_x="170dp"
                    android:layout_y="170dp"
                    android:background="#ff000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/imageView4"
                    android:layout_marginRight="1dp"
                    android:scaleType="centerCrop"
                    android:padding="3dp"/>

                <ImageView android:id="@+id/expanded_image"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:layout_centerInParent="true"
                    android:layout_x="0dp"
                    android:layout_y="0dp"
                    android:background="#ff000000"
                    android:padding="5dp"/>
            </AbsoluteLayout>
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:id="@+id/guessWordsLayout"
    android:orientation="vertical">



</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter0"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:background="#a4ff8144"
            android:onClick="onClickActualLetter"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter1"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter0"
            android:layout_toEndOf="@+id/buttonLetter0"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter2"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter1"
            android:layout_toEndOf="@+id/buttonLetter1"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter3"
            android:background="#a4ff8144"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffffff"
            android:layout_toRightOf="@+id/buttonLetter2"
            android:layout_toEndOf="@+id/buttonLetter2"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter4"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter3"
            android:layout_toEndOf="@+id/buttonLetter3"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter5"
            android:layout_marginLeft="5dp"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonLetter4"
            android:layout_toEndOf="@+id/buttonLetter4"
            android:onClick="onClickActualLetter"
             />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton8"
            android:textColor="#ffffffff"
            android:background="#ffffff"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/buttonLetter5"
            android:layout_toEndOf="@+id/buttonLetter5"
            android:onClick="onClickActualLetter"
            android:text="\?"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter6"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_toLeftOf="@+id/buttonLetter1"
            android:layout_toStartOf="@+id/buttonLetter1"
            android:layout_marginTop="45dp"
            android:onClick="onClickActualLetter"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter7"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter6"
            android:layout_toLeftOf="@+id/buttonLetter2"
            android:layout_toStartOf="@+id/buttonLetter2"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter8"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter7"
            android:layout_toLeftOf="@+id/buttonLetter3"
            android:layout_toStartOf="@+id/buttonLetter3"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter9"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter8"
            android:layout_toLeftOf="@+id/buttonLetter4"
            android:layout_toStartOf="@+id/buttonLetter4"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter10"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter9"
            android:layout_alignLeft="@+id/buttonLetter4"
            android:layout_alignStart="@+id/buttonLetter4"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLetter11"
            android:background="#a4ff8144"
            android:textColor="#ffffffff"
            android:layout_alignTop="@+id/buttonLetter10"
            android:layout_toLeftOf="@+id/imageButton8"
            android:layout_toStartOf="@+id/imageButton8"
            android:onClick="onClickActualLetter" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#ffffffff"
            android:id="@+id/buttonLetter12"
            android:background="#a4ff8144"
            android:layout_alignTop="@+id/buttonLetter11"
            android:layout_alignLeft="@+id/imageButton8"
            android:layout_alignStart="@+id/imageButton8"
            android:onClick="onClickActualLetter" />

    </RelativeLayout>



</LinearLayout>