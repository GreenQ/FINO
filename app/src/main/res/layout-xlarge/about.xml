<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullfon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/coni"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:alpha="0.7"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:textSize="38sp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffffff"
                android:layout_toLeftOf="@+id/imageView"/>

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/coin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/coni"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:id="@+id/imageButton3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:alpha="0.7"
                android:background="@drawable/arr"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/coni"
            android:id="@+id/cifra">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffffff"
                android:textSize="55sp"
                android:id="@+id/textViewCurLevel"
                android:alpha="0.7"/>

        </RelativeLayout>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/nextLevel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cifra"
            android:onClick="NextLevelClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/prevLevel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cifra"
            android:onClick="PrevLevelClick"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ифна о нас"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="70dp" />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="#ffaeabad"
        android:text="Страница о себе... Но что же вам сказать о нас? Врятли вы нажмете на кнопку о нас, а тем более прочитаете эту бесполезную информацию, но все же мы решили написать всякую лабуду о себе, типо какие мы классные девелоперы и обезательно оставим свое мыло для того что бы вы якобы писали туда свои жалобы и предложения, но вы настолько ленивые юзеры что даже не поплагодарите разрабов за бесплатную игру своим положительным коментом в гуглплее. Всем спасибо за внимание!"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="#ff2b394a"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Закрыть этот экран навсегда"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:id="@+id/btnClose"
        android:layout_gravity="center_horizontal" />
</LinearLayout>