<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullfon"
    android:id="@+id/rootLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/coni"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayoutGold"
            android:onClick="ShowGameshopPopUp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:alpha="0.7"
                android:id="@+id/textViewGold"
                android:layout_centerVertical="true"
                android:textSize="38sp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffffff"
                android:layout_toLeftOf="@+id/imageView"/>

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/coin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/coni"
            android:layout_marginLeft="10dp"
            android:id="@+id/goBack"
            android:onClick="goBack">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:id="@+id/imageButton3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:alpha="0.7"
                android:background="@drawable/arr"
                android:onClick="goBack"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/coni"
            android:id="@+id/cifra">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffffff"
                android:textSize="55sp"
                android:id="@+id/textViewCurLevel"
                android:alpha="0.7"/>

        </RelativeLayout>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/nextLevel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cifra"
            android:onClick="NextLevelClick"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/prevLevel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cifra"
            android:onClick="PrevLevelClick"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="710dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="10dp" android:gravity="center">
            <!--
             This is an example layout containing thumbnail image buttons that, when pressed,
                         zoom in to show more detail. All of the zooming and animation logic is in
                         the ZoomActivity class.
            -->
            <RelativeLayout android:layout_width="700dp" android:layout_height="700dp" android:layout_centerHorizontal="true">
                <ImageButton android:layout_width="340dp" android:layout_height="340dp" android:layout_x="0dp" android:layout_y="0dp" android:background="#ff20195d" android:layout_marginBottom="5dp" android:id="@+id/imageView1" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:padding="4dp"/>
                <ImageButton android:layout_width="340dp" android:layout_height="340dp" android:layout_x="170dp" android:background="#ff20195d" android:adjustViewBounds="false" android:baselineAlignBottom="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginLeft="5dp" android:id="@+id/imageView2" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="4dp"/>
                <ImageButton android:layout_width="340dp" android:layout_height="340dp" android:layout_x="0dp" android:layout_y="170dp" android:background="#ff20195d" android:clickable="false" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/imageView3" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="4dp"/>
                <ImageButton android:layout_width="340dp" android:layout_height="340dp" android:layout_x="170dp" android:layout_y="170dp" android:background="#ff20195d" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginLeft="5dp" android:layout_marginBottom="5dp" android:id="@+id/imageView4" android:layout_marginRight="1dp" android:scaleType="centerCrop" android:padding="4dp"/>
                <ImageView android:id="@+id/expanded_image" android:layout_width="700dp" android:layout_height="700dp" android:visibility="invisible" android:contentDescription="@string/description_zoom_touch_close" android:layout_centerInParent="true" android:layout_x="0dp" android:layout_y="0dp" android:padding="5dp" android:background="#ff20195d"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/guessWordsLayout"
        android:orientation="vertical">





    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter0"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#A4FF8144"
            android:onClick="onClick"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter1"
            android:background="#A4FF8144"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/buttonLetter0"
            android:layout_toEndOf="@+id/buttonLetter0"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter2"
            android:background="#A4FF8144"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/buttonLetter1"
            android:layout_toEndOf="@+id/buttonLetter1"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter3"
            android:background="#A4FF8144"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/buttonLetter2"
            android:layout_toEndOf="@+id/buttonLetter2"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter4"
            android:background="#A4FF8144"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/buttonLetter3"
            android:layout_toEndOf="@+id/buttonLetter3"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter5"
            android:layout_marginLeft="10dp"
            android:background="#A4FF8144"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonLetter4"
            android:layout_toEndOf="@+id/buttonLetter4"
            android:onClick="onClick"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton8"
            android:text="\?"
            android:textColor="#ffffffff"
            android:background="#ff1ed448"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/buttonLetter5"
            android:layout_toEndOf="@+id/buttonLetter5"
            android:textSize="@dimen/actual_letter_text_size"
            android:onClick="ShowHintsPopUp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter6"
            android:background="#A4FF8144"
            android:layout_toLeftOf="@+id/buttonLetter1"
            android:layout_toStartOf="@+id/buttonLetter1"
            android:layout_marginTop="100dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter7"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter6"
            android:layout_toLeftOf="@+id/buttonLetter2"
            android:layout_toStartOf="@+id/buttonLetter2"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter8"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter7"
            android:layout_toLeftOf="@+id/buttonLetter3"
            android:layout_toStartOf="@+id/buttonLetter3"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter9"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter8"
            android:layout_toLeftOf="@+id/buttonLetter4"
            android:layout_toStartOf="@+id/buttonLetter4"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter10"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter9"
            android:layout_alignLeft="@+id/buttonLetter4"
            android:layout_alignStart="@+id/buttonLetter4"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter11"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter10"
            android:layout_toLeftOf="@+id/imageButton8"
            android:layout_toStartOf="@+id/imageButton8"
            android:onClick="onClick" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonLetter12"
            android:background="#A4FF8144"
            android:layout_alignTop="@+id/buttonLetter11"
            android:layout_alignLeft="@+id/imageButton8"
            android:layout_alignStart="@+id/imageButton8"
            android:onClick="onClick" />

    </RelativeLayout>



</LinearLayout>