<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.7"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отлично!"
            android:textSize="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textView3"
            android:textColor="#ffffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы отгадали"
            android:textColor="#ffffffff"
            android:textSize="55sp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="А Ф Р И К А"
            android:textColor="#ffffffff"
            android:textSize="90sp"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:id="@+id/guessWordTextView" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guessWordTextView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="А в Африке капец как жарко - что дохнут мухи и слоны"
                android:textColor="#ffffffff"
                android:textSize="50sp"
                android:id="@+id/textViewQuotation"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textColor="#FFFFFF"
                android:textSize="100sp"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="152dp"
                android:layout_height="100dp"
                android:background="@drawable/coins"
                android:id="@+id/imageView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:layout_centerVertical="true"/>

        </RelativeLayout>




        <Button
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:text="Продолжить"
            android:id="@+id/buttonClose"
            android:textSize="40sp"
            android:textColor="#ffffffff"
            android:background="#2b394a"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admob"
        android:layout_alignParentBottom="true">

    </LinearLayout>

</RelativeLayout>